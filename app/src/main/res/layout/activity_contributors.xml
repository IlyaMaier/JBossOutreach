<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_contributors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ContributorsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/leaders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/card_contributors"
                android:id="@+id/leader2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="56dp" />

            <include
                layout="@layout/card_contributors"
                android:id="@+id/leader1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" />

            <include
                layout="@layout/card_contributors"
                android:layout_width="wrap_content"
                android:id="@+id/leader3"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/podium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:src="@drawable/ic_podium" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_contributors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="400dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:layoutAnimation="@anim/layout_animation_fall_down" />

        </FrameLayout>

    </ScrollView>

</RelativeLayout>